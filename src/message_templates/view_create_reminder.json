{
    "trigger_id": "trigger_id",
    "view": {
        "callback_id": "reminder_view",
        "type": "modal",
        "title": {
            "type": "plain_text",
            "text": "Baymax Reminder",
            "emoji": true
        },
        "submit": {
            "type": "plain_text",
            "text": "Submit",
            "emoji": true
        },
        "close": {
            "type": "plain_text",
            "text": "Cancel",
            "emoji": true
        },
        "blocks": [
			{
				"type": "input",
				"block_id": "reminder_content",
				"element": {
					"type": "plain_text_input",
					"multiline": true,
					"action_id": "plain_text_input-action"
				},
				"label": {
					"type": "plain_text",
					"text": "What you remind",
					"emoji": true
				}
			},
			{
				"type": "section",
				"block_id": "reminder_target",
				"text": {
					"type": "mrkdwn",
					"text": "*Notify to*"
				},
				"accessory": {
					"type": "conversations_select",
					"placeholder": {
						"type": "plain_text",
						"text": "Select conversations",
						"emoji": true
					},
					"action_id": "conversations_select-action"
				}
			},
			{
				"type": "section",
				"text": {
					"type": "mrkdwn",
					"text": "*Date/Time*"
				}
			},
			{
				"type": "actions",
				"block_id": "reminder_datetime",
				"elements": [
					{
						"type": "datepicker",
						"initial_date": "1990-04-28",
						"placeholder": {
							"type": "plain_text",
							"text": "Select a date",
							"emoji": true
						},
						"action_id": "remind_datepicker"
					},
					{
						"type": "timepicker",
						"initial_time": "13:37",
						"placeholder": {
							"type": "plain_text",
							"text": "Select time",
							"emoji": true
						},
						"action_id": "remind_timepicker"
					}
				]
			},
			{
				"type": "section",
				"block_id": "reminder_reccurence_setting",
				"text": {
					"type": "mrkdwn",
					"text": " "
				},
				"accessory": {
					"type": "button",
					"text": {
						"type": "plain_text",
						"text": "Reccurence",
						"emoji": true
					},
					"value": "open_reccurence_settings",
					"action_id": "open_reccurence_settings"
				}
			}
		]
    }
}